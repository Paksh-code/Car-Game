body {
  background-color: #f0f0f0;
  font-family: Arial, sans-serif;
  text-align: center;
}

#game-container {
  margin-top: 50px;
  position: relative;
}

canvas {
  border: 2px solid #000;
  background-color: #ddd;
}

h1 {
  color: #333;
}
const canvas = document.getElementById("gameCanvas");
const ctx = canvas.getContext("2d");

// Car Object
const car = {
  width: 50,
  height: 100,
  x: canvas.width / 2 - 25,
  y: canvas.height - 120,
  speed: 10,
  dx: 0
};

// Obstacle Object
const obstacle = {
  width: 50,
  height: 50,
  x: Math.random() * (canvas.width - 50),
  y: -50,
  speed: 4
};

// Key event listeners
document.addEventListener("keydown", (e) => {
  if (e.key === "ArrowLeft" || e.key === "a") {
    car.dx = -car.speed;
  }
  if (e.key === "ArrowRight" || e.key === "d") {
    car.dx = car.speed;
  }
});
document.addEventListener("keyup", () => {
  car.dx = 0;
});

// Draw car
function drawCar() {
  ctx.fillStyle = "blue";
  ctx.fillRect(car.x, car.y, car.width, car.height);
}

// Draw obstacle
function drawObstacle() {
  ctx.fillStyle = "red";
  ctx.fillRect(obstacle.x, obstacle.y, obstacle.width, obstacle.height);
}

// Update game objects
function updateGame() {
  // Move the car
  car.x += car.dx;
  if (car.x < 0) car.x = 0;
  if (car.x + car.width > canvas.width) car.x = canvas.width - car.width;

  // Move the obstacle
  obstacle.y += obstacle.speed;
  if (obstacle.y > canvas.height) {
    obstacle.y = -50;
    obstacle.x = Math.random() * (canvas.width - 50);
  }

  // Check for collision
  if (
    car.x < obstacle.x + obstacle.width &&
    car.x + car.width > obstacle.x &&
    car.y < obstacle.y + obstacle.height &&
    car.y + car.height > obstacle.y
  ) {
    alert("Game Over! Try Again.");
    resetGame();
  }

  // Clear the canvas
  ctx.clearRect(0, 0, canvas.width, canvas.height);

  // Draw the car and obstacle
  drawCar();
  drawObstacle();

  // Request next frame
  requestAnimationFrame(updateGame);
}

// Reset the game
function resetGame() {
  car.x = canvas.width / 2 - 25;
  obstacle.y = -50;
}

// Start the game
updateGame();

// Add more fake large content to inflate file size
for (let i = 0; i < 5000; i++) {
  document.body.innerHTML += "<p>This is dummy content to artificially inflate the file size.</p>";
}
